{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "./",
    "types": [
      "next",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/app/*": [
        "app/*"
      ],
      "@leadlah/core": [
        "../../packages/core/src/index.ts"
      ],
      "@leadlah/core/*": [
        "../../packages/core/src/*"
      ],
      "@leadlah/ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@leadlah/ui/*": [
        "../../packages/ui/src/*"
      ]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
